<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_login"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:alpha="0.6"
            android:src="@drawable/ic_classroom" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:alpha="0.6"
            android:text="Tuition Guru"
            android:textColor="#ff9900"
            android:textSize="35dp"
            android:textStyle="bold" />

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="300dp"-->
        <!--android:backgroundTint="#9100f0"-->
        <!--android:elevation="4dp"-->
        <!--app:cardCornerRadius="4dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btStartForStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@drawable/login_button"
                android:padding="8dp"
                android:text="I am Student"
                android:textColor="#fff"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btStartForTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:alpha="0.8"
                android:background="@drawable/login_button"
                android:padding="8dp"
                android:text="I am Teacher"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:alpha="0.6"
                android:gravity="center"
                android:text="\u00A9 2018 Oikos Technology Associates"
                android:textColor="#fff" />
        </LinearLayout>


        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>


</LinearLayout>