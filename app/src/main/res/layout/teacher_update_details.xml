            <EditText
                android:id="@+id/etCityUpdate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:background="@drawable/edittext_bottom_outline"
                android:drawableLeft="@drawable/ic_location_city_white_24dp"
                android:drawablePadding="12dp"
                android:hint="update your city"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="#fff" />

            <TextView
                android:id="@+id/tvState1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:text="update your state"
                android:textColor="#ff9900" />

            <Spinner
                android:id="@+id/spUpdateState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff9900"
                android:labelFor="@id/tvState1" />

            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:text="update your field"
                android:textColor="#ff9900" />

            <Spinner
                android:id="@+id/spUpdateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff9900"
                android:labelFor="@id/tvState" />


            <TextView
                android:id="@+id/tvBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:text="update your branch (Engineering Subjects)"
                android:textColor="#ff9900" />

            <Spinner
                android:id="@+id/spUpdateBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff9900"
                android:labelFor="@id/tvBranch" />

            <!--<TextView-->
            <!--android:id="@+id/tvUpdateField"-->
