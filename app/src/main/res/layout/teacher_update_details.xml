            <TextView
                android:id="@+id/tvUpdateClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:text="update class you want to teach"
                android:textColor="#ff9900" />

            <Spinner
                android:id="@+id/spClassUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff9900"
                android:labelFor="@id/tvUpdateClass" />

            <EditText
                android:id="@+id/etSubjectUpdate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:background="@drawable/edittext_bottom_outline"
                android:drawableLeft="@drawable/ic_public_white_24dp"
                android:drawablePadding="12dp"
                android:hint="update your subjects"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="#fff" />


            <EditText
                android:id="@+id/etFeeUpdate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:background="@drawable/edittext_bottom_outline"
                android:drawableLeft="@drawable/ic_rupee_white"
                android:drawablePadding="12dp"
                android:hint="update monthly fee"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="#fff" />

