<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/adDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/adImage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:background="#80000000"
                android:gravity="center_vertical"
                android:maxLines="4"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:text="The 17th edition of PYROKINESIS will be sparked by the presence of famous singer and musician \“NAKASH AZIZ\”"
                android:textColor="#fff"
                android:textSize="12sp" />

            <RelativeLayout
                android:padding="8dp"
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/adImage"
                android:background="#000"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/adKnowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="KNOW MORE"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adLocationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/adLocation"
                    android:gravity="center_vertical"
                    android:text="Location"
                    android:textColor="#ff9900"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/adLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/adKnowMore"
                    android:layout_marginStart="6dp"
                    android:text="Maligaon, Guwahati, Assam"
                    android:textColor="#ff9900" />

            </RelativeLayout>

            <TextView
                android:id="@+id/adTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/adDescription"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:background="#80000000"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="CONCEPT EDUCATION EDUVENTURE LIMITED"
                android:textColor="#ffa726"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
